#CHECK FOR DOCKER CONTAINERS
docker ps
#CHECK FOR DOCKER CONTAINERS ALL (even if stopped)
docker ps -a / docker ps --all
#CHECK FOR DOCKER IMAGES
docker images
#CREATE DOCKER CONTAINER
docker create --name CONT-NAME IMAGE-SRC
#CREATE DOCKER CONTAINER AND START
docker run CONT-NAME IMAGE-SRC
#CREATE DOCKER CONTAINER AND RUN IN BACK GROUND
docker run -d --name CONT-NAME IMAGE-SRC
#CREATE DOCKER CONTAINER AND RUN AND ALSO KEEP REUNNING EVEN IF TRIED TO STOPPED
docker run -d -ti --name CONT-NAME IMAGE-SRC
#CREATE DOCKER CONTAINER AND RE RUN IN CASE OF CONTAINER ENGINE RESTARED
docker run -d -ti --name CONT-NAME --restart always IMAGE-SRC
#CREATE DOCKER CONTAINER AND SET A RESOURCES FOR IT 
docker run -d -ti --name CONT-NAME --restart always --memory xxM --cpus x.x IMAGE-SRC


